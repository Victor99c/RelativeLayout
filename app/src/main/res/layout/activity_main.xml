<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listo"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton 1"
        android:layout_below="@id/text"
        android:layout_toLeftOf="@id/btn2"
        android:layout_marginHorizontal="20dp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton 2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton 3"
        android:layout_below="@id/text"
        android:layout_toRightOf="@id/btn2"
        android:layout_marginHorizontal="20dp"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton 4"
        android:layout_below="@id/btn"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_marginHorizontal="20dp"

        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton 5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn2"
        />
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton 6"
        android:layout_below="@id/btn3"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginHorizontal="20dp"
        />
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton 7"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn5"
        />
</RelativeLayout>